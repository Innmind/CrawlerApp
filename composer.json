{
    "name": "innmind/crawler-app",
    "license": "proprietary",
    "description": "Crawl the web and publish the graph to an api",
    "type": "project",
    "autoload": {
        "psr-4": {
            "Crawler\\": "src/"
        },
        "files": ["src/bootstrap.php"]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Crawler\\": "tests/"
        }
    },
    "require": {
        "php": "~7.2",
        "innmind/crawler": "~5.0",
        "innmind/robots-txt": "~4.0",
        "innmind/server-control": "^2.0",
        "innmind/server-status": "^1.0",
        "innmind/amqp": "~2.1",
        "innmind/cli": "^1.0",
        "monolog/monolog": "^1.23",
        "symfony/dotenv": "^4.0",
        "innmind/logger": "^1.0",
        "innmind/rest-client": "~7.1",
        "innmind/homeostasis": "^2.4",
        "innmind/installation-monitor": "~2.1",
        "innmind/json": "^1.1",
        "innmind/silent-cartographer": "^1.1",
        "innmind/stack": "^1.0",
        "innmind/ipc": "^2.1"
    },
    "require-dev": {
        "phpunit/phpunit": "~8.0",
        "giorgiosironi/eris": "^0.11.0",
        "infection/infection": "^0.7.1",
        "roave/security-advisories": "dev-master",
        "innmind/debug": "^1.1"
    },
    "scripts": {
        "test" : "bin/simple-phpunit"
    },
    "extra": {
        "gene": {
            "expression": [
                "bin/crawler install",
                "bin/crawler homeostasis --daemon"
            ]
        }
    }
}

{
    "name": "innmind/crawler-app",
    "license": "proprietary",
    "description": "Crawl the web and publish the graph to an api",
    "type": "project",
    "autoload": {
        "psr-4": {
            "Crawler\\": "src/"
        },
        "files": ["src/bootstrap.php"]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Crawler\\": "tests/"
        }
    },
    "require": {
        "php": "~7.2",
        "innmind/crawler": "~4.0",
        "innmind/robots-txt": "~3.0",
        "innmind/server-control": "^2.0",
        "innmind/server-status": "^1.0",
        "innmind/amqp": "^1.1",
        "innmind/compose": "^1.1",
        "innmind/cli": "^1.0",
        "monolog/monolog": "^1.23",
        "symfony/dotenv": "^4.0",
        "innmind/logger": "^1.0",
        "innmind/rest-client": "^6.2",
        "innmind/homeostasis": "^2.4",
        "innmind/time-warp": "^1.0",
        "innmind/installation-monitor": "^1.1"
    },
    "require-dev": {
        "phpunit/phpunit": "~6.0",
        "giorgiosironi/eris": "^0.9.0",
        "infection/infection": "^0.7.1",
        "roave/security-advisories": "dev-master"
    },
    "scripts": {
        "test" : "bin/simple-phpunit"
    }
}
